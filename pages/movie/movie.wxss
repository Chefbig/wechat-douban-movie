/* pages/movie/movie.wxss */
.movie {
  margin: 1.3rem 0.5rem;
}

.movie-item {
  margin-bottom: 1rem;
}

.movie-item-title {
  font-weight: 500;
  font-family: 黑体;
}

.movie-item-scroll-x {
  display: flex;
  margin-top: 0.5rem;
  height: 360rpx;
  overflow-x: scroll;
}

.movie-item-block {
  margin-right: 20rpx;
  display: inline-flex;
  flex-direction: column;
  flex-wrap: nowrap;
}

.movie-item-block-img {
  width: 160rpx;
  height: 240rpx;
}

.movie-item-block-title {
  width: 160rpx;
  margin: 10rpx 0;
  font-size: 0.75rem;
  font-family: 微软雅黑;
  font-weight: 600;
  text-overflow: ellipsis;
  overflow: hidden;
	white-space: nowrap;
}

.movie-item-block-rating {
  font-size: 0.7rem;
  font-family: 微软雅黑;
  color: #ff9800;
}
